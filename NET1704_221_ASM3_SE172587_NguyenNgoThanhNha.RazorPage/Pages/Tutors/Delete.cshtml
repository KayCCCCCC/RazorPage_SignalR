@page "{id:Guid}"
@model NET1704_221_ASM3_SE172587_NguyenNgoThanhNha.RazorPage.Pages.Tutors.DeleteModel
@{
}

<div class="bg-white p-4 container mx-auto max-w-2xl rounded-lg shadow-lg">
    <div class="d-flex justify-content-center">
        <h1 class="mb-4 fw-bold text-2xl">Delete Tutor</h1>
    </div>

    <div class="card">
        <div class="card-body d-flex flex-column align-items-center justify-content-center gap-2 m-2">
            <h3>Are you sure you want to delete <span class="text-danger fs-1">@Model.Tutor.Fullname</span>?</h3>

            <form method="post">
                <input type="hidden" asp-for="Tutor.TutorId" />

                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./List" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>

</div>

